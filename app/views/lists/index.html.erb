<!-- Banner with Title -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'movie_audience.jpg' %>);">
  <div class="container">
    <h1>Save your <strong>favourite movies</strong> in personalised lists!</h1>
    <p><span data-controller="typed-js"></span></p>
    <a class="btn btn-gradient" href="#jump-mark">List now</a>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 text-center m-3">
      <h1 id="jump-mark">Here are your current lists <%= link_to '+',  new_list_path %></h1>
    </div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://unsplash.it/640/425)">
          <%= "#{list.name}" %> <%=  link_to '+', list_path(list), class: 'ps-3' %>
        </div>
      <% end %>

    </div>


  </div>





</div>
