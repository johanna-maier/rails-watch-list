<!-- Banner with Title -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'movie_audience.jpg' %>);">
  <div class="container">
    <h1>Save your <strong>favourite movies</strong> in personalised lists!</h1>
    <p><span data-controller="typed-js"></span></p>
    <a class="btn btn-gradient" href="#jump-mark">List now</a>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 text-center m-3 pb-3">
      <h1 id="jump-mark">Bookmark your movie in "<%= @list.name %>"</h1>
      <p>(<%= link_to 'Back to the list', list_path(@list) %>)</p>
      <%= simple_form_for [ @list, @bookmark ] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.button :submit, class: 'btn btn-gradient' %>
      <% end %>
    </div>
  </div>
</div>
